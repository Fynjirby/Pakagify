<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pakagify.Maui.MainPage"
             BackgroundColor="#2A2C35">

    <FlexLayout>
        <VerticalStackLayout
            BackgroundColor="#343743"
            WidthRequest="300"
            Spacing="5"
            Padding="30">
                <Button Clicked="NewRepositoryBtn" Text="New Repository"/>
                <Button Text="Open Repository"/>
        </VerticalStackLayout>
        <ScrollView Padding="10">
            <VerticalStackLayout>
                <Label
                    FontFamily="PlayFair Display"
                    FontSize="48">
                        Recents Used
                </Label>
                <Label>-- Future goes here --</Label>
            </VerticalStackLayout>
        </ScrollView>
    </FlexLayout>
</ContentPage>

